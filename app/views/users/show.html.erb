<h2 class="mt-2">Профиль пользователя</h2>

<% if flash.any? %>
  <% flash.each do |key, value| %>
    <div class="mt-2 alert alert-primary col align-items-center">
      <a href="#" data-dismiss="alert" class="close">×</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
    </div>
  <% end %>
<% end %>

<div class="bg-light rounded mt-2">
  <%= render partial: 'users/user', object: @user %>
</div>
<div class="mt-3">
  <h5>Статистика игр:</h5>
  <%= render partial: 'games/game', collection: @games %>
</div>
