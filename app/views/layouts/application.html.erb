<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MathQuiz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand navbar-default bg-light">
      <div class="collapse navbar-collapse navbar-responsive-collapse"> 
        <div class="container justify-content-start">
          <%= link_to "Speed Math", root_path, class: 'navbar-brand' %>
          <div class="nav">
            <ul class="navbar-nav">
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to 'Профиль', current_user, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
              <% else %>
                <li class="nav-item"><%= link_to 'Войти', new_user_session_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'nav-link' %></li>
              <% end %>
            </ul>

            <% if current_user %>
              <%= link_to 'Новая игра', new_game_path, class: 'btn navbar-btn btn-danger btn-xs' %>
            <% end %>
          </div>  
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= yield %>
        </div>
        <div class="col-lg-3">
        </div><!--/span-->
      </div><!--/row-->

      <footer>
        <p>&copy; Balance Platform test case</p>
      </footer>
    </div>
  </body>
</html>
